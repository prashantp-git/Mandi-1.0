<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333366"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignUpActivity" >

    <TextView
        android:id="@+id/mandiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:text="Mandi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fullnameEditText"
        android:layout_toRightOf="@+id/mandiTextView"
        android:text="App2016"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#339999"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/fullnameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mandiTextView"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/edittext_customui"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Full Name"
        android:textSize="15dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fullnameEditText"
        android:layout_alignRight="@+id/fullnameEditText"
        android:layout_below="@+id/fullnameEditText"
        android:layout_marginTop="-2dp"
        android:background="@drawable/edittext_customui"
        android:ems="15"
        android:hint="Email"
        android:inputType="textEmailAddress|textPassword"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/mobEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signupButton"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="-2dp"
        android:background="@drawable/edittext_customui"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Mobile"
        android:inputType="number"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobEditText"
        android:layout_below="@+id/mobEditText"
        android:layout_marginTop="-2dp"
        android:background="@drawable/edittext_customui"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernameEditText"
        android:layout_below="@+id/usernameEditText"
        android:layout_marginTop="-2dp"
        android:background="@drawable/edittext_customui"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="15dp" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignRight="@+id/emailEditText"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="26dp"
        android:background="#3399cc"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="16dp"
        android:background="#0000"
        android:text="Login"
        android:textColor="#009999" />

    <Button
        android:id="@+id/arrowbackButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_alignTop="@+id/loginButton"
        android:layout_toLeftOf="@+id/loginButton"
        android:alpha="0.4"
        android:background="@drawable/arrow_back" />

</RelativeLayout>